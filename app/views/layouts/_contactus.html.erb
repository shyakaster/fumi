         <form id="contact-form" class="contact-form form"> 
      <%= form_for @message, url:'contact_path'  do |f| %>
       <div id="form-messages" class="text-center"></div> 
             <div class="row text-left">
              <% if @message.errors.any? %>
                  <div id="error_explanation"class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h2><%= pluralize(@message.errors.count, "error") %> prohibited this mail from being sent.</h2>

                    <ul>
                      <% @message.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

           <div class="name-group col-sm-6 col-xs-12 form-group">
              <div class="form-group-inner">
                <%= f.label :name %>
                <%= f.text_field :name, class:'form-control' %>
              </div>
           </div>
            <div class="name-group col-sm-6 col-xs-12 form-group">
                        <div class="form-group-inner">
                <%= f.label :email%>
                <%= f.email_field :email, class:'form-control' %>
             </div>
             </div>
              <div class="name-group col-sm-6 col-xs-12 form-group">
                        <div class="form-group-inner">
                <%= f.label :telephone %>
                <%= f.text_field :telephone,class:'form-control' %>
              </div>
              </div>
            
               <div class="name-group col-sm-6 col-xs-12 form-group">
                 <div class="form-group-inner">
                <%= f.label :message %>
                <%= f.text_area :message, class:'form-control' %>
                  </div>

              </div>
             <div class="col-xs-12 form-group">
              <div class="actions">
                <%= f.submit class: 'btn btn-primary' %>
              </div>
            </div>
        </div>
  <% end %>
  </form>

